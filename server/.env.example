# HealthTracker Backend - Environment Configuration
# Copy this file to .env and fill in your values

# ===== Server Configuration =====
PORT=5000
NODE_ENV=development
LOG_LEVEL=info

# ===== Database =====
MONGO_URI=mongodb://localhost:27017/healthtracker
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/healthtracker?retryWrites=true&w=majority

# ===== JWT & Authentication =====
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ===== AI & Groq API =====
GROQ_API_KEY=your_groq_api_key_here
# Get from: https://console.groq.com/keys

# ===== Redis (for async job queue) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# For Redis Cloud:
# REDIS_HOST=your-redis-endpoint.redis.cloud
# REDIS_PORT=YOUR_PORT
# REDIS_PASSWORD=your_redis_password

# ===== Async Jobs Configuration =====
ENABLE_ASYNC_JOBS=false
# Set to 'true' to use BullMQ queue (requires Redis)
# Set to 'false' to use synchronous mode (default, no Redis required)

# AI Worker Configuration
WORKER_CONCURRENCY=5
# Max concurrent AI jobs processed by the worker

AI_JOB_MAX_ATTEMPTS=3
# Max retry attempts for failed AI jobs

# ===== CORS Configuration =====
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ===== Production Security =====
# Rate limiting configuration (in express-rate-limit)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Logging & Observability =====
# Optional: Sentry integration for error tracking
# SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id

# Optional: Datadog integration
# DD_API_KEY=your_datadog_api_key
